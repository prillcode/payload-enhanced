DATABASE_URI=file:./cms.db #SQLite database file (change to postgres URI when deploying - see payload.config for db adapter usage based on URI format)
PAYLOAD_SECRET=YOUR_SECRET_HERE

# Email Configuration - For Payload's internal emails (user welcome, password recovery, etc.)
# NOTE: For application emails (contact forms, etc.), configure SMTP in the admin panel under Site Settings > Email Settings
FROM_EMAIL=noreply@yoursite.com # Email address for Payload's internal emails
FROM_NAME=Your Site Name # Display name for Payload's internal emails
SMTP_HOST=smtp.gmail.com # SMTP server hostname
SMTP_PORT=587 # SMTP port (587 for TLS, 465 for SSL)
SMTP_USER=your-email@gmail.com # SMTP username
SMTP_PASSWORD=your-app-password # SMTP password or app-specific password

# NOTE: This template is setup to use S3 for media storage. If you dont want this, you'll have to update payload.config to remove it accordingly
S3_BUCKET_NAME=your-bucket-name # Replace with your actual S3 bucket name
S3_REGION=your-region # Replace with your actual S3 region
S3_ACCESS_KEY_ID=your-access-key-id # Replace with your actual S3 access key ID
S3_SECRET_ACCESS_KEY=your-secret-access-key # Replace with your actual S3 secret access key